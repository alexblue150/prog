#include <conio.h>
#include <stdio.h>

int main()
{
    int n;

    printf( "\n   escriba el numero del dia de la semana: ", 161 );
    scanf( "%d", &n );

    switch ( n )
    {
         case 1 : printf( "\n   Lunes" );
                  break;
         case 2 : printf( "\n   Martes" );
                  break;
         case 3 : printf( "\n   Miercoles");
                  break;
         case 4 : printf( "\n   Jueves" );
                  break;
         case 5 : printf( "\n   Viernes" );
                  break;
         case 6 : printf( "\n   Sabado" );
                  break;
         case 7 : printf( "\n   Domingo" );
                  break;
        default : printf( "\n   Dia incorrecto." );
    }

    return 0;
}
