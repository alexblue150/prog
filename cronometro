#include <stdio.h>
#include <windows.h>
#include <stdlib.h>
int main (){
int min=0 , seg=0 , hor=0 ;

for(;;){
seg++;
if(seg==60){
    min++;
    seg=0;
    if(min==0){
        hor++;
        min=0;
        if(hor==24){
            hor=0;}
    }}
    system ("cls");
    printf("\n\n\n (%d:%d:%d)", hor,min,seg);
    sleep(1);
    }}
