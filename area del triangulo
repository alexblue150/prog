#include <stdio.h>
#include <math.h>
double area (int a, int b, int c);

int main(int argc, char *argv[]) {
int a,b,c;
double ar;
printf(" escribe el primer lado \n");
scanf("%d", &a);
printf(" escribe el segundo lado \n");
scanf("%d", &b);
printf(" escribe el tercer lado \n");
scanf("%d", &c);
ar=area(a,b,c);
printf("El area es : %lf ", ar);

return 0;
}
double area(int a, int b, int c){
double p,p1,p2,p3,ar;
p=(a+b+c)/2;
p1=p-a;
p2=p-b;
p3=p-c;
ar=sqrt(p*p1*p2*p3);
return ar;
}

