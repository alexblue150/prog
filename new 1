#include <stdio.h>
#include <math.h>
int main (){
	float termino=0, numerador=1, denominador=1, suma=1, n, x, i;
	printf ("escribe x \n");
	scanf ("%f", &x);
	printf ("escribe n \n");
	scanf("%f", &n);
	
	for(i=1;i<=n;i++){
		numerador=numerador*x;
		denominador=denominador*i;
		termino= numerador/denominador;
		suma= suma+ termino;
	}
	printf ("%f", suma);
	return 0;
}
