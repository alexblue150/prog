#include <stdio.h>
#include <conio.h>

int main ()
{
 int numero, m = 0, j = 0, h, sumadorent = 0 ;

 printf("\n escribe un numero \n") ;
 scanf("%d", &numero) ;
 while(numero != 0){
{

    j=h%10;
    m=h-j;
    h=m;
        if (m = 2 || 4 || 6 || 8);
        sumadorent=sumadorent+1
}

printf("\n %d numeros de pares:", sumadorent) ;


