#include <stdio.h>
void mayor (int *, int *, int *);


int main(int argc, char *argv[]) {
int a,b,c;
printf(" escribe el primer valor \n");
scanf("%d", &a);
printf(" escribe el segundo valor \n");
scanf("%d", &b);
printf(" escribe el tercer valor \n");
scanf("%d", &c);
mayor(&a, &b, &c);
printf ("\n");
	printf(" el menor es %d", &a);
	printf ("\n");
	printf(" el medio es %d", &b);
	printf ("\n");	
	printf(" el numero mayor es %d", &c);
	printf ("\n");
	
	return 0;
}
int mayor(int *a, int *b, int *c){
	if (*a<*b){
		if(*a<*c){
			*a=*a;
			if(*c<*b){
				*b=*c;
				*c=*b;
			}
			else{
				*b=*b;
				*c=*c;
			}
		}
		else {
			if(*c<*b){
				*a=*c;
				if (*a<*b){
				*b=*a;
				*c=*b;
				}
			}
			else{
				*b=*b;
				*c=*a;
			}
		}
	}
	else (*c<*a){
		if(*c<*b){
			*a=*c;
			if(*a<*b){
				*b=*a;
				*c=*b;
					}
			else{
				*b=*b;
				*c=*a;
			}
		}
		
	}

return a;
return b;
return c;
}
